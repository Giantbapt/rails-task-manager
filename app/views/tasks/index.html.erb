<h1>My Tasks</h1>
<% @tasks.each do |task| %>
    <% if task[:completed] == true %>
      <h2>X <%= link_to task[:title], task_path(task) %> -
        <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </h2>
    <% else %>
    <h2>O <%= link_to task[:title], task_path(task) %> -
     <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></h2>
    <% end %>
<% end %>
<%= link_to "Add a new task", tasks_new_path %>
